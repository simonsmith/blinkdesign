<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_page.data.title || yield_content(:title) || 'Blog' %> &ndash; simonsmith.io</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600|Yanone+Kaffeesatz" rel="stylesheet">
    <%= stylesheet_link_tag 'site' %>
    <script>
      var ga = ga || function() {
        (ga.q = ga.q || []).push(arguments);
      };
      ga.l = 1 * new Date();
      ga('create', 'UA-6798894-3', 'auto');
      ga('send', 'pageview');
    </script>
    <script async src="//www.google-analytics.com/analytics.js"></script>
    <link rel="alternate" type="application/rss+xml" title="simonsmith.io - blog RSS" href="/feed.xml"/>
    <% if content_for? :head %>
      <%= yield_content :head %>
    <% end %>
  </head>
  <body>
    <div hidden>
      <%= partial 'icons/icons.svg' %>
    </div>
    <header class="Header" role="banner">
      <div class="Container">
        <div class="Grid Grid--alignMiddle Grid--withGutter">
          <div class="Header-wrapLogo Grid-cell u-md-size3of12">
            <%= partial 'logo' %>
          </div>
          <div class="Header-wrapNav Grid-cell u-md-size9of12">
            <%= partial 'nav' %>
          </div>
        </div>
      </div>
    </header>
    <main class="Container Container--main" role="main">
      <div class="Grid Grid--withGutter">
        <div class="Grid-cell u-md-size9of12">
            <%= yield %>
        </div>
        <div class="Grid-cell u-md-size3of12 u-md-flexOrderFirst">
          <div class="Aside">
            <div class="Aside-item u-pt30">
              <%= partial 'profile' %>
            </div>
            <div class="Aside-item u-p10">
              <%= partial 'contact' %>
            </div>
          </div>
          <div class="u-mt10 u-textCenter">
            <%= partial 'rss' %>
          </div>
        </div>
      </div>
    </main>
    <footer class="Footer" role="contentinfo">
      <div class="Container">
        <div class="Grid Grid--withGutter">
          <div class="Grid-cell u-md-before3of12">
            <p class="Footer-text">
              Simon Smith <time datetime="<%= Time.now.year %>"><%= Time.now.year %></time> &bull; Built with
              <a class="u-linkMuted u-linkUnderline u-linkNoDecoration" href="http://middlemanapp.com/">Middleman</a> and
              <a class="u-linkMuted u-linkUnderline u-linkNoDecoration" href="http://suitcss.github.io/">SUIT CSS</a> &bull; View
              the sauce
              <a class="u-linkMuted u-linkUnderline u-linkNoDecoration" href="https://github.com/simonsmith/simonsmith.io">on
                GitHub</a>
            </p>
          </div>
        </div>
      </div>
    </footer>
    <script>
      window.$ = document.querySelectorAll.bind(document);
      NodeList.prototype.__proto__ = Array.prototype;
    </script>
    <% if content_for? :scripts %>
      <%= yield_content :scripts %>
    <% end %>
  </body>
</html>
